{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "plugins": [{ "name": "@astrojs/ts-plugin" }],
    "paths": {
      "@components": ["src/components", "src/components/index.ts"],
      "@components/*": ["src/components/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@partials": ["src/partials"],
      "@partials/*": ["src/partials/*"],
      "@layouts": ["src/layouts"],
      "@layouts/*": ["src/layouts/*"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    ".astro/types.d.ts",
    "astro.config.*",
    "src/env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.mts",
    "src/**/*.cts",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.mjs",
    "src/**/*.cjs",
    "src/**/*.astro",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "storybook-static"
  ]
}
